<h1>Users Moderation</h1>

<%for user in @users%>
	<div class="streamitem">
		<div class="avatar"><%=image_tag 'http://www.gravatar.com/avatar/'+Digest::MD5.hexdigest(user.email)+'?s=80'%></div>
		<div class="username"><%=user.login%></div>
		<div class="email"><%=user.email%></div>
	</div>
	---
<% end %>

